<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel="icon" href="/public/favicon.ico" sizes="70x70" type="image/ico">
    <link rel='stylesheet' href='/public/css/style.css' />
    <script defer type="text/javascript" src="../../public/js/homeJs.js"></script>
    <script defer type="text/javascript" src="../../public/js/formValidation.js"></script>
  </head>
  <body>
    {{> banner}}
    {{#if (emptyObject messages)}}
    {{> flashmessage}}
    {{/if}}
    {{> nav}}
    {{{body}}}
    {{> footer}}

    {{#if logged}}
        <script>
            let ele = document.getElementById('logout-button');
            if(ele) {
                ele.onclick = (even) => {
                    fetch('users/logout',{
                        method:"POST"
                    })
                    .then((data) => {
                        location.replace('/');
                    })
                }
            }
        </script>
    {{/if}}
  </body>
</html>
