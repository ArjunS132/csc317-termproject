<div class="center grey-box">
    <section>
        <h1>Registration Form</h1>
    </section>
    <form class="grid-container" onsubmit="submitForm(event)">
        <input id="username" type="text" placeholder="Username">
        <input id="email" type="email" placeholder="email">
        <input id="password" type="password" placeholder="Password">
        <input id="re-enter-password" type="password" placeholder="Re-enter password">
        <div class="horizontal-grid">
            <input id="confirm-age-checkbox" type="checkbox" required>
            <label id="confirm-age">confirm that you are atleast 13 years old</label>
        </div>
        <label>By submitting this form you are accepting the privacy rules</label>
        <a id="tosprivacy" class="blue" href="#tos-and-privacy-rules">TOS and Privacy Rules</a>
        <button class="looksLikeButton" id="submit-form" type="submit">submit</button>
    </form>
</div>
